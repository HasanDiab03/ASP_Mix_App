@page "{id}"
@model ASP_Mix_App.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
				<label asp-for="CategoryBindingModel.Name" class="control-label"></label>
				<input asp-for="CategoryBindingModel.Name" class="form-control" />
				<span asp-validation-for="CategoryBindingModel.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
        </form>
    </div>
</div>